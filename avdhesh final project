class Restaurant:
    def __init__(self,name,Price,Discount,Orders,Quantity):
        self.name = name
        self.Price= Price
        self.Discount = dict()
        self.orders = []
        self.Quantity={}

    def add_menu(self,name,price):
        self.menu.update({name:price})

    def print_menu(self):
        for key,value in self.menu.items():
            print(f'{key} ----> {value}')



    def __repr__(self):
        return f'name: {self.name}, Location:{self.add}'

